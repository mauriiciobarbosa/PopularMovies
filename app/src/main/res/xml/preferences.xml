<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ListPreference
        android:key="@string/pref_sort_key"
        android:title="@string/pref_sort_title"
        android:defaultValue="@string/pref_sort_default_value"
        android:entries="@array/sort_by_list"
        android:entryValues="@array/sort_by_list_values"
        tools:summary="@string/title_sort_by_popular" />

    <ListPreference
        android:key="@string/pref_language_key"
        android:title="@string/pref_language_title"
        android:defaultValue="@string/pref_language_default_value"
        android:entries="@array/language_list"
        android:entryValues="@array/language_list_values"
        tools:summary="@string/title_language_us" />

</PreferenceScreen>