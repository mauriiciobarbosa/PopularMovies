<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_review"
    style="@style/ReviewCard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/md_keylines">

        <TextView
            android:id="@+id/tvAuthor"
            style="@style/ReviewAuthor"
            tools:text="By Gimly: "/>

        <TextView
            android:id="@+id/tvContent"
            style="@style/ReviewContent"
            tools:text="Denis Villenueve offers a great film, but one that is exactly what the trailer put forth, this is not a Sci-Fi War film waiting to happen, or a modern-day horror. It's a character-driven piece about politics, life, humanity and communication.\nFinal rating:★★★ - I strongly recommend you make the time."/>

        <TextView
            android:id="@+id/tvLink"
            style="@style/ReviewLink"
            tools:text="Look more at https://www.themoviedb.org/review/5844cdd89251416a7400fc24" />

    </LinearLayout>

</android.support.v7.widget.CardView>